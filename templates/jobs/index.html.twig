{% extends 'base.html.twig' %}

{% block title %}Hello {{ controllerName }}!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <p>this is the content of the "<span></span>" page</p>
        <script>document.querySelector("span").textContent = "{{ controllerName }}".replace("Controller", "");</script>
    </div>
    {% for article in articleList %}
        <article>
            <h2>{{ article.title }}</h2>
            <p>{{ article.category }}</p>
            <p>{{ article.salary }}</p>
            <a href="metiers/{{ article.id }}">See article</a>
        </article>
    {% endfor %}
{% endblock %}
