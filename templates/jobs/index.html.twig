{% extends 'base.html.twig' %}

{% block title %}CSAF - Metiers{% endblock %}

{% block body %}
<section class="jobs">
    <div class="grid-container">
        <div class="grid-x align-center">
            <div class="edito grid-x grid-padding-x align-middle">
                <div class="cell small-12 medium-6">
                    <h1 class="edito__title small-12">
                    Emplois
                    </h1>
                </div>

            <div class="cell small-12 medium-6">
                <p class="edito__text">Le CSAF est composé de cinq départements : Intelligence géospatiale, Ingéniere spatiale, Techniciens de l’air, Escadres armées, ainsi que Logistique & maintenance. 
</p>
            </div>
        </div>
        <div class="jobsList">

            <div class="jobs-boxs-container small-12">
                {% for category in jobs_categories %}
                    <div>
                        <h3 class="sectionTitle jobs__categorieTitle cell small-12">{{ category }}</h3>
                        {% for job in jobs %}
                            {% if job.category == category %}
                                <a class="grid-x grid-padding-x align-justify">
                                    <div class=" cell small-12 medium-6 large-4 ">
                                        <a href="{{ path('jobsArticle', {'id': job.id}) }}" class="large-12 jobs-box-container">
                                            <p class="jobs-box-text">{{ job.title }}</p>
                                        </a>
                                    </div>
                                </a>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
</section>
{% endblock %}
